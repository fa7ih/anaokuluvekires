@model Contact3
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_ParentsLayout.cshtml";
}
<link rel="stylesheet" href="~/starterpersonal/assets/css/style-liberty.css">
<h1>Mesajın Detayları</h1>
<hr />
<section class="w3l-about py-5" id="about">
    <div class="container py-md-5 py-2">
        <div class="row w3l-row">
            <div class="col-lg-7 w3l-about-info px-lg-4 align-center">
                <h6 class="w3l-title-small mb-1">@(((DateTime)Model.Contact2ReplyCreateDate).ToString("dd/MMM/yyyy"))</h6>
                <h3 class="w3l-title-main mb-2">@Model.Contact2ReplyTitle</h3>
                <p class="my-4 pe-lg-5">@Model.Contact2ReplyBody</p>
                <div class="my-info mt-5">
                    <div class="single-info">
                        <span>Adı:</span>
                        <p>@Model.Contact2ReplySender</p>
                    </div>
                </div>
                <div class="w3l-btn">
                    <a href="/Parents/ContactTeacher/SendMessage" class="btn btn-style btn-primary mt-lg-5 mt-4 me-md-2">Cevapla</a>
                    <span style="margin-right: 10px;"></span>
                    <a href="/Parents/ContactTeacher/Index" class="btn btn-style btn-info mt-lg-5 mt-4 me-md-2">Mesaj Listesi</a>
                </div>
            </div>
        </div>
    </div>
</section>
