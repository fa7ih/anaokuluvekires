@model EntityLayer.Concrete.Student
@{
    ViewData["Title"] = "NewStudent";
    Layout = "~/Views/Shared/_ParentLayout.cshtml";
}

<h1>Öğrencinizi Kayıt Ettirmek İçin Başvurun</h1>
<br />
<form method="post">
    <div class="form-group">
        <h4>Öğrenci TC Kimlik No</h4>
        <input type="text" asp-for="StudentTc" class="form-control" maxlength="11" />
    </div>
    <div class="form-group">
        <h4>Öğrenci Adı</h4>
        <input type="text" asp-for="StudentName" class="form-control" />
    </div>
    <div class="form-group">
        <h4>Öğrenci Soyadı</h4>
        <input type="text" asp-for="StudentSurName" class="form-control" />
    </div>
    <div class="form-group">
        <h4>Öğrenci Doğum Tarihi</h4>
        <input type="date" asp-for="StudentBirth" class="form-control" />
    </div>
    <div class="form-group">
    <h4>Öğrenci Cinsiyeti</h4>
    <select asp-for="StudentGender" class="form-control">
        <option value="Erkek">Erkek</option>
        <option value="Kadın">Kız</option>
    </select>
</div>
    <button class="btn btn-outline-success">Başvurunu Yap</button>
</form>

