@model List<Students2>

@{
    ViewData["Title"] = "MyCurrentStudent";
    Layout = "~/Views/Shared/_ParentsLayout.cshtml";
    int sayac = 0;
}

<h1>Aktif Öğrencilerim</h1>
<br />
@if (!Model.Any())
{
    <h4>Aktif Öğrenciniz Bulunmamaktadır.</h4>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>TC Kimlik Numarası</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Doğum Tarihi</th>
            <th>Cinsiyeti</th>
            <th>Durumu</th>
            <th>Düzenle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                @{
                    sayac++;
                }
                <th>@sayac</th>
                <td>@item.StudentTc</td>
                <td>@item.StudentName</td>
                <td>@item.StudentSurName</td>
                <td>@(((DateTime)item.StudentBirth).ToString("dd/MMM/yyyy"))</td>
                <td>@item.StudentGender</td>
                <td>@item.Status</td>
                <td>
                    <a href="@Url.Action("EditStudent", "Student", new { id = item.StudentId })" class="btn btn-outline-info">Düzenle</a>
                </td>
            </tr>
        }
    </table>
}
