@model Contact4
@{
    ViewData["Title"] = "ReplyMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1 class="display-4">Mesaj Gönder</h1>
<hr />
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    <hr />
}
@using (Html.BeginForm("ReplyMessage", "MessageParent", FormMethod.Post))
{
    <div class="form-group">
        <label class="h5">Cevap Yazın</label>
        @Html.DropDownListFor(model => model.AdminReplyReciver, (IEnumerable<SelectListItem>)ViewData["Parents"], "Veliyi Seçin", new { @class = "form-control" })
    </div>
    <br />
    <div class="form-group">
        <label class="h5">Mesajın Başlığı</label>
        @Html.TextBoxFor(model => model.AdminReplyTitle, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-group">
        <label class="h5">Mesajın İçeriği</label>
        @Html.TextAreaFor(model => model.AdminReplyBody, new { @class = "form-control", @rows = 4 })
    </div>
    <br />
    <input type="submit" value="Gönder" class="btn btn-outline-primary" />
}

