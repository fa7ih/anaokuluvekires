@model List<EntityLayer.Concrete.Contact2>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Veli Mesajları</h1>
<hr />
@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Gönderen</th>
                <th>Başlık</th>
                <th>Telefon</th>
                <th>Mail</th>
                <th>Sil</th>
                <th>Detay</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model)
            {
                <tr>
                    <td>@message.Contact2Sender</td>
                    <td>@message.Contact2Title</td>
                    <td>@message.Contact2Phone</td>
                    <td>@message.Contact2Mail</td>
                    <td>
                        <form method="post" asp-action="DeleteMessage">
                            <input type="hidden" name="id" value="@message.Contact2Id " />
                            <button type="submit" class="btn btn-outline-danger">Okundu</button>
                        </form>
                    </td>
                    <td>
                        <a href="@Url.Action("MessageDetails", "MessageParent", new { messageId = message.Contact2Id })" class="btn btn-outline-primary">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Henüz hiç mesajınız yok.</p>
}

