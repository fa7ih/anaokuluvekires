@model List<EntityLayer.Concrete.Contact3>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Öğretmen Mesajları</h1>
<hr />
@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Gönderen</th>
                <th>Başlık</th>
                <th>Telefon</th>
                <th>Mail</th>
                <th>Gönderme Tarihi</th>
                <th>Sil</th>
                <th>Detay</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model)
            {
                <tr>
                    <td>@message.Contact2ReplySender</td>
                    <td>@message.Contact2ReplyTitle</td>
                    <td>@message.Contact2ReplyPhone</td>
                    <td>@message.Contact2ReplyMail</td>
                    <td>@(((DateTime)message.Contact2ReplyCreateDate).ToString("dd/MMM/yyyy"))</td>
                    <td>
                        <form method="post" asp-action="DeleteMessage">
                            <input type="hidden" name="id" value="@message.Contact3Id " />
                            <button type="submit" class="btn btn-outline-danger">Okundu</button>
                        </form>
                    </td>
                    <td>
                        <a href="@Url.Action("MessageDetails", "MessageTeacher", new { messageId = message.Contact3Id })" class="btn btn-outline-primary">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Henüz hiç mesajınız yok.</p>
}

