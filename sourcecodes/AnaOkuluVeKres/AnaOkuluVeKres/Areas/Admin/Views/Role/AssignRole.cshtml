@model List<AnaOkuluVeKres.Areas.Admin.Models.RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Veli Rol Atama Sayfası</h1>
<hr />
<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
            <div class="form-check">
                <input type="hidden" asp-for="@Model[i].RoleId" />
                <input type="hidden" asp-for="@Model[i].RoleName" />
                <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
                <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
            </div>
    }
    <button class="btn btn-outline-primary">Değişiklikleri Kaydet</button>
</form>
