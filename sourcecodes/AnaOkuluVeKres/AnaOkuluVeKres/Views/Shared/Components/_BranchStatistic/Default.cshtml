<div class="col-md-6 col-lg-4 col-xl-4 order-0 mb-4">
    <div class="card h-100">
        <div class="card-header d-flex align-items-center justify-content-between pb-0">
            <div class="card-title mb-0">
                <h5 class="m-0 me-2">Branş İstatistikleri</h5>
                <small class="text-muted"></small>
            </div>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="d-flex flex-column align-items-center gap-1">
                    <h2 class="mb-2">@ViewBag.v1</h2>
                    <span>Toplam Branşlar</span>
                </div>
                <div id="orderStatisticsChart"></div>
            </div>
            <ul class="p-0 m-0">
                <li class="d-flex mb-4 pb-1">
                    <div class="avatar flex-shrink-0 me-3">
                        <span class="avatar-initial rounded bg-label-primary">
                            <i class="bx bx-mobile-alt"></i>
                        </span>
                    </div>
                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                        <div class="me-2">
                            <h6 class="mb-0">Okuma Yazma</h6>
                        </div>
                        <div class="user-progress">
                            <small class="text-muted">Öğretmen Sayımız: </small>
                            <small class="fw-semibold">@ViewBag.v2</small>
                        </div>
                    </div>
                </li>
                <li class="d-flex mb-4 pb-1">
                    <div class="avatar flex-shrink-0 me-3">
                        <span class="avatar-initial rounded bg-label-success"><i class="bx bx-closet"></i></span>
                    </div>
                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                        <div class="me-2">
                            <h6 class="mb-0">Matematik</h6>
                        </div>
                        <div class="user-progress">
                            <small class="text-muted">Öğretmen Sayımız: </small>
                            <small class="fw-semibold">@ViewBag.v3</small>
                        </div>
                    </div>
                </li>
                <li class="d-flex mb-4 pb-1">
                    <div class="avatar flex-shrink-0 me-3">
                        <span class="avatar-initial rounded bg-label-info"><i class="bx bx-home-alt"></i></span>
                    </div>
                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                        <div class="me-2">
                            <h6 class="mb-0">Müzik</h6>
                        </div>
                        <div class="user-progress">
                            <small class="text-muted">Öğretmen Sayımız: </small>
                            <small class="fw-semibold">@ViewBag.v4</small>
                        </div>
                    </div>
                </li>
                <li class="d-flex mb-4 pb-1">
                    <div class="avatar flex-shrink-0 me-3">
                        <span class="avatar-initial rounded bg-label-secondary">
                            <i class="bx bx-football"></i>
                        </span>
                    </div>
                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                        <div class="me-2">
                            <h6 class="mb-0">Spor</h6>
                        </div>
                        <div class="user-progress">
                            <small class="text-muted">Öğretmen Sayımız: </small>
                            <small class="fw-semibold">@ViewBag.v5</small>
                        </div>
                    </div>
                </li>
                <li class="d-flex mb-4 pb-1">
                    <div class="avatar flex-shrink-0 me-3">
                        <span class="avatar-initial rounded bg-label-info">
                            <i class="bx bx-code"></i>
                        </span>
                    </div>
                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                        <div class="me-2">
                            <h6 class="mb-0">Yazılım</h6>
                        </div>
                        <div class="user-progress">
                            <small class="text-muted">Öğretmen Sayımız: </small>
                            <small class="fw-semibold">@ViewBag.v6</small>
                        </div>
                    </div>
                </li>
                <li class="d-flex mb-4 pb-1">
                    <div class="avatar flex-shrink-0 me-3">
                        <span class="avatar-initial rounded bg-label-success">
                            <i class="bx bx-play"></i>
                        </span>
                    </div>
                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                        <div class="me-2">
                            <h6 class="mb-0">Dans</h6>
                        </div>
                        <div class="user-progress">
                            <small class="text-muted">Öğretmen Sayımız: </small>
                            <small class="fw-semibold">@ViewBag.v7</small>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
