@using EntityLayer.Concrete
@model List<Teacher>
<div class="col-12 col-xl-4">
    <div class="card h-100">
        <div class="card-header pb-0 p-3">
            <a href="/Teacher/Index/">
                <h6 class="mb-0">Eğitmenlerimiz</h6>
            </a>
        </div>
        <div class="card-body p-3">
            <ul class="list-group">
                @foreach (var item in Model.Take(5))
                {
                    <li class="list-group-item border-0 d-flex align-items-center px-0 mb-2">
                        <div class="avatar me-3">
                            <img src="@item.TeacherImgUrl" alt="kal" class="border-radius-lg shadow">
                        </div>
                        <div class="d-flex align-items-start flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">@item.TeacherNameSurname</h6>
                            <p class="mb-0 text-xs">@(item.TeacherBiography.Length > 60 ? item.TeacherBiography.Substring(0, item.TeacherBiography.Substring(0, 65).LastIndexOf(" ")) + "..." : item.TeacherBiography + "...")</p>
                        </div>
                        <a class="btn btn-link pe-3 ps-0 mb-0 ms-auto" href="javascript:;">İletişim</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
